---
const { name, url, image } = Astro.props;
---

<a
  href={url}
  target="_blank"
  class="relative block group rounded-2xl border border-dashed border-neutral-300 dark:border-neutral-700 p-1 transition-all duration-500 hover:-translate-y-1 bg-white dark:bg-neutral-950"
>
  <div class="relative w-full aspect-video overflow-hidden rounded-[14px] bg-neutral-100 dark:bg-neutral-800">
    
    <img
      src={image}
      alt={name}
      class="object-cover w-full h-full transition-transform duration-700 ease-out group-hover:scale-110"
    />

    <div class="absolute inset-0 bg-black/20 backdrop-blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-500 ease-in-out"></div>
    
    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-700 ease-out">
      <div class="w-[85%] h-[70%] bg-white/10 border border-white/20 rounded-xl shadow-2xl flex flex-col items-center justify-center p-4 transform scale-95 group-hover:scale-100 transition-transform duration-500">
        
        <h3 class="text-[10px] font-bold text-white uppercase tracking-[0.2em] text-center">
          {name}
        </h3>
        
        <div class="w-10 h-[1px] bg-white/30 mt-3"></div>
        
        <span class="mt-3 text-[8px] text-white/70 uppercase tracking-widest">View Project</span>
      </div>
    </div>
  </div>
</a>