---
import PostsLoop from "../components/posts-loop.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My Writing">
  <section class="max-w-4xl mx-auto px-7 lg:px-0">
    <div class="mt-20">
      <h1 class="text-4xl font-bold text-neutral-900 dark:text-white">My Writing</h1>
      <p class="mt-4 text-neutral-600 dark:text-neutral-400">
        Dive into my musings on life and tech in my latest posts.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-10 mb-20">
      <PostsLoop />
    </div>
  </section>
</Layout>