---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Adi">
  <div class="relative z-20 w-full max-w-4xl mx-auto mt-10 px-7 md:mt-16 lg:mt-20 xl:px-0">
    <div class="flex flex-col md:flex-row items-stretch">
      
      <div class="relative w-full md:w-1/2 flex flex-col justify-between pb-0 md:pb-10">
        <div>
          <h1 class="mb-5 text-4xl font-bold leading-tight md:text-5xl lg:text-6xl dark:text-white tracking-tighter">
            Hello, I'm <span class="text-rose-600 dark:text-rose-500">Adi.</span>
          </h1>
          <p class="mb-6 text-lg text-neutral-600 dark:text-neutral-400 leading-relaxed">
            Transforming big ideas into simple, visual identities. I specialize in 
            <span class="font-bold text-neutral-500 dark:text-neutral-400">high-conversion thumbnails</span> 
            and clean aesthetics for modern creators.
          </p>
          <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
            I can help you out with:
          </p>
          <ul class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400">
            <li><span class="font-bold text-neutral-500 dark:text-neutral-400">High-Conversion Thumbnails</span></li>
            <li>Social Profile Optimization & Branding</li>
            <li>Strategic Content SEO & Visibility</li>
            <li>and more...</li>
          </ul>
        </div>
        
        <div class="mt-8 md:mt-0 pt-2">
          <Button text="Get in Touch" link="mailto:aditto.iam@gmail.com" />
        </div>
      </div>

      <div class="hidden md:flex relative justify-center md:justify-end w-full mt-12 md:mt-0 md:pl-10 md:w-1/2 md:-translate-y-10">
        <div class="relative z-50 w-full max-w-[350px] md:max-w-md">
          
          <div class="absolute top-[10%] -left-4 md:-left-6 z-40 w-12 h-12 md:w-16 md:h-16 rounded-full group">
            <span class="relative z-20 flex items-center justify-center w-full h-full text-xl md:text-2xl border-4 md:border-8 border-white rounded-full dark:border-neutral-950 bg-neutral-100 dark:bg-neutral-900 shadow-lg transition-transform duration-300 group-hover:scale-110">
              <span class="flex items-center justify-center w-full h-full bg-white border border-dashed rounded-full dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700 animate-pulse">
                <span class="inline-block origin-bottom-right animate-[wave_2.5s_infinite]">ðŸ‘‹</span>
              </span>
            </span>
          </div>

          <div class="relative z-30 px-10">
            <img
              src="/assets/images/photo.png"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full aspect-[790/1189] md:max-w-md mx-auto grayscale hover:grayscale-0 transition-all duration-700 hover:scale-[1.02]"
            />
          </div>

          <div class="absolute bottom-0 right-0 z-20 w-full h-[85%] md:h-[420px] border border-dashed rounded-2xl bg-gradient-to-r dark:from-neutral-950 dark:via-black dark:to-neutral-950 from-white via-neutral-50 to-white border-neutral-300 dark:border-neutral-700">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="-mt-4">
    <Separator text="Check out my projects" />
  <Projects />

  <div class="-mt-12 md:-mt-20">
    <Separator text="Some of my writing" />
    <Writings />
  </div>
</Layout>